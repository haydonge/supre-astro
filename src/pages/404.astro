---
import MainLayout from "../layout/MainLayout.astro";
import {Image} from "astro:assets"
import error from '../images/error-404.png'
---

<MainLayout title = "Page Not Found">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="404" height={250} width={250} class="mt-10"></Image>
    <h1 class ="text-4xl">Page Not Found</h1>
    <p class="text-2xl mb-10">
     Sorry We could't find your looking page. 
    </p>
    <p></p>
    <a href="/" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Go Back Home</a>
  </div>
</MainLayout>